{
  "manifest_version": 3,
  "name": "TTML2 to CSV Converter",
  "version": "1.0",
  "description": "Converts TTML2 files to CSV and provides file management",
  "permissions": [
    "storage",
    "activeTab",
    "webRequest",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}